#!/usr/bin/env ruby
# encoding: utf-8

$:.unshift File.dirname(__FILE__) + '/../library'
require 'pulse'

options = {
  nickname: "meta",
  networks: %w{uplink.io}
}

Pulse.connect options do
  puts "=> Pulse #{Pulse::Version}"
  
  catch :connection_ready do |network|
    network.transmit :JOIN, "#uplink"
  end
end