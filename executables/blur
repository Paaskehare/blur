#!/usr/bin/env ruby
# encoding: utf-8

$:.unshift File.dirname(__FILE__) + '/../library'
require 'blur'

options = {
  networks: [
    {
      hostname: "uplink.io",
      nickname: "meta-test80",
      channels: %w{#uplink}
    },
    {
      hostname: "uplink.io",
      nickname: "meta-lol",
      channels: %w{#uplink}
    }
  ]
}

Blur.connect options do
  puts "==> Blur #{Blur::Version}"

  catch :message do |user, channel, message|
  end
end
