#!/usr/bin/gem build
# encoding: utf-8

$:.unshift File.dirname(__FILE__) + '/library'
require 'blur'

Gem::Specification.new do |spec|
  spec.name    = "blur"
  spec.version = Blur::Version
  spec.summary = "Extensible IRC library"

  spec.author  = "Mikkel Kroman"
  spec.email   = "mk@maero.dk"

  spec.files = Dir["library/**/*.rb"]
  spec.require_path = "library"

  spec.add_dependency "majic", ">= 0.1"
  spec.add_dependency "eventmachine", "> 0.12"
end

# vim: set syntax=ruby:
