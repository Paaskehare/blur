  s.name    = "Pulse"
  s.version = "1.1.0"
  s.summary = "Extensible IRC library"

  s.author  = "Mikkel Kroman"
  s.email   = "mk@maero.dk"

  s.files = Dir['library/**/*.rb']
  s.bindir = "executables"
  s.has_rdoc = false
  s.require_path = "library"
  s.required_ruby_version = ">= 1.9.1"
end

